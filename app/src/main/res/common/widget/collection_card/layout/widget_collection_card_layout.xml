<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/widget_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/widget_collection_card_vertical"
        android:layout_marginBottom="@dimen/widget_collection_card_vertical"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/widget_collection_card_title_side_margin"
        android:layout_marginEnd="@dimen/widget_collection_card_title_side_margin"
        android:layout_marginBottom="@dimen/widget_collection_card_title_vertical_margin"
        android:gravity="center_vertical"
        android:textSize="@dimen/widget_collection_card_title_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Dinos"/>
</merge>
