<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/standard_bottom_padding"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/standard_side_padding"
        android:layout_marginEnd="@dimen/standard_side_padding"
        android:textSize="@dimen/collections_list_item_title_text_size"
        android:textStyle="bold"
        tools:text="Dinos"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_products"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_product_card_height"
        android:layout_marginTop="@dimen/standard_top_padding"
        android:paddingStart="@dimen/standard_side_padding_small"
        android:paddingEnd="@dimen/standard_side_padding_small"
        android:clipToPadding="false"/>

</LinearLayout>
