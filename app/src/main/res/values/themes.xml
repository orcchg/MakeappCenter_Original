<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="navigationIcon">@drawable/ic_arrow_back_white_24px</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionBarSize">@dimen/toolbar_min_height</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:typeface">serif</item>  <!-- overridden in Application -->
        <item name="android:windowBackground">@color/light_grey_bg</item>

        <item name="refColorAccent">?colorAccent</item>
        <item name="refColorAccentDark">@color/colorAccentDark</item>
        <item name="refColorAccentLight">@color/colorAccentLight</item>
        <item name="refColorInactive">@color/inactive</item>
        <item name="refColorPrimary">?colorPrimary</item>
        <item name="refColorPrimaryDark">?colorPrimaryDark</item>
        <item name="refColorPrimaryLight">@color/colorPrimaryLight</item>

        <item name="cpb_color">@color/colorAccent</item>
        <item name="cpb_stroke_width">@dimen/cpb_default_stroke_width</item>
        <item name="cpb_min_sweep_angle">@integer/cpb_default_min_sweep_angle</item>
        <item name="cpb_max_sweep_angle">@integer/cpb_default_max_sweep_angle</item>
        <item name="cpb_sweep_speed">@string/cpb_default_sweep_speed</item>
        <item name="cpb_rotation_speed">@string/cpb_default_rotation_speed</item>
    </style>

    <style name="Base.AppTheme.Fullscreen">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Base.AppTheme.TransparentBackground" parent="Base.AppTheme">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowBackground">@color/semitransparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Base.AppTheme.TransparentStatus">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme"/>

    <style name="AppTheme.Fullscreen" parent="Base.AppTheme.Fullscreen"/>

    <style name="AppTheme.TransparentBackground" parent="Base.AppTheme.TransparentBackground"/>

    <style name="AppTheme.TransparentStatus" parent="Base.AppTheme.TransparentStatus">
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowTranslucentStatus">false</item>
    </style>
</resources>
